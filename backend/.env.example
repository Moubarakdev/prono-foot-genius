# App Settings
APP_NAME="FootGenius API"
DEBUG=true
API_V1_STR="/api/v1"
# CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Database - MySQL 8.0
# Format: mysql+aiomysql://user:password@host:port/dbname
DATABASE_URL=mysql+aiomysql://root:rootpassword@localhost:3307/couponfoot

# Redis
REDIS_URL=redis://localhost:6379

# Security - JWT
# Generate a secure key: openssl rand -hex 32
JWT_SECRET=change-this-to-a-secure-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
JWT_REFRESH_EXPIRE_DAYS=30

# Football Data Providers
# 1. Football-Data.org (Free Tier - Recommended)
FOOTBALL_DATA_API_KEY=your-football-data-org-key
# 2. API-Football (Legacy/RapidAPI)
FOOTBALL_API_KEY=your-api-football-key

# AI Providers
# 1. Google Gemini (Recommended)
GEMINI_API_KEY=your-gemini-api-key
# 2. Ollama (Local) - No key needed, configure URL if remote

# External Services
NEWS_API_KEY=your-newsapi-key

# Payments - Stripe
STRIPE_API_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
# Product Price IDs (Create in Stripe Dashboard)
STRIPE_PRICE_STARTER=price_xxxxxxxxxxxxx
STRIPE_PRICE_PRO=price_xxxxxxxxxxxxx
STRIPE_PRICE_LIFETIME=price_xxxxxxxxxxxxx

# Payments - Moneroo (Mobile Money)
MONEROO_API_KEY=your-moneroo-api-key
MONEROO_WEBHOOK_SECRET=your-moneroo-webhook-secret

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@footgenius.com
SMTP_TLS=true
SMTP_SSL=false

# Celery (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
